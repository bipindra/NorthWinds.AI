{
  "ConnectionStrings": {
    // Connection string should be set in User Secrets for development
    // For SQL Server: dotnet user-secrets set "ConnectionStrings:NorthwindsDb" "Server=(localdb)\\mssqllocaldb;Database=NorthwindsDb;Trusted_Connection=True;TrustServerCertificate=True;"
    // For MariaDB: dotnet user-secrets set "ConnectionStrings:NorthwindsDb" "Server=localhost;Port=3306;Database=NorthwindsDb;User=root;Password=yourpassword;"
    "NorthwindsDb": ""
  },
  "DatabaseOptions": {
    "DbProvider": "SqlServer"
  },
  "FeatureFlags": {
    "EnableApprovals": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
