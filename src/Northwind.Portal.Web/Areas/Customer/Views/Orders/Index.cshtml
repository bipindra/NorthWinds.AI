@model IEnumerable<Northwind.Portal.Domain.DTOs.OrderDto>
@using Northwind.Portal.Domain.Enums
@{
    ViewData["Title"] = "My Orders";
}

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Order History</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>#@order.OrderId</strong></td>
                                <td>@order.OrderDate?.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @{
                                        var statusBadgeClass = order.CurrentStatus switch
                                        {
                                            OrderPortalStatus.Submitted => "bg-info",
                                            OrderPortalStatus.PendingApproval => "bg-warning",
                                            OrderPortalStatus.Approved => "bg-success",
                                            OrderPortalStatus.Picking => "bg-primary",
                                            OrderPortalStatus.Shipped => "bg-success",
                                            OrderPortalStatus.Cancelled => "bg-danger",
                                            OrderPortalStatus.Rejected => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusBadgeClass">@order.CurrentStatus</span>
                                </td>
                                <td><strong>@order.Total.ToString("C")</strong></td>
                                <td>
                                    <a asp-area="Customer" asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                                No orders found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
