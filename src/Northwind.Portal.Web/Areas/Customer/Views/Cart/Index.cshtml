@model Northwind.Portal.Domain.DTOs.CartDto
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Your Cart</h5>
    </div>
    <div class="card-body">
        @if (Model.Lines.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var line in Model.Lines)
                        {
                            <tr>
                                <td><strong>@line.ProductName</strong></td>
                                <td>
                                    <form asp-action="Update" method="post" class="d-inline-flex align-items-center gap-2">
                                        <input type="hidden" name="cartLineId" value="@line.Id" />
                                        <input type="number" name="quantity" value="@line.Quantity" min="1" class="form-control form-control-sm" style="width:80px;" />
                                        <button type="submit" class="btn btn-sm btn-primary">
                                            <i class="fas fa-sync-alt"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>@line.UnitPrice.ToString("C")</td>
                                <td><strong>@line.LineTotal.ToString("C")</strong></td>
                                <td>
                                    <form asp-action="Remove" method="post" style="display:inline;">
                                        <input type="hidden" name="cartLineId" value="@line.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash me-1"></i>Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <th colspan="3" class="text-end">Subtotal</th>
                            <th>@Model.SubTotal.ToString("C")</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="text-end mt-3">
                <a asp-controller="Checkout" asp-action="Index" class="btn btn-success btn-lg">
                    <i class="fas fa-credit-card me-2"></i>Proceed to Checkout
                </a>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3 d-block"></i>
                <p class="text-muted mb-3">Your cart is empty.</p>
                <a asp-controller="Catalog" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-store me-2"></i>Browse Products
                </a>
            </div>
        }
    </div>
</div>
