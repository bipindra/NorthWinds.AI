<nav class="top-navbar">
    <div class="navbar-content">
        <div class="d-flex align-items-center">
            <button class="btn btn-link d-md-none me-3" id="sidebarToggle" type="button">
                <i class="fas fa-bars"></i>
            </button>
            <a href="~/" class="navbar-brand">
                <i class="fas fa-shopping-bag me-2"></i>
                Customer Portal
            </a>
        </div>
        
        <div class="navbar-actions" style="display: flex !important; align-items: center; gap: 1rem; visibility: visible !important;">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <button type="button" class="btn btn-link position-relative me-2" id="chatIconBtn" title="AI Chat Assistant" style="color: #1e293b !important; text-decoration: none !important; display: inline-flex !important; visibility: visible !important; opacity: 1 !important;">
                    <i class="fas fa-comments fa-lg"></i>
                </button>
                <div class="position-relative me-2" id="cartIconContainer" style="visibility: visible !important; opacity: 1 !important; display: inline-block !important;">
                    <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="btn btn-link position-relative cart-icon-link" title="Shopping Cart" id="cartIconLink" style="color: #1e293b !important; text-decoration: none !important; display: inline-flex !important; visibility: visible !important; opacity: 1 !important;">
                        <i class="fas fa-shopping-cart fa-lg"></i>
                        @await Component.InvokeAsync("CartCount")
                    </a>
                    <div id="cartPopup" class="cart-popup" style="display: none;">
                        <div class="cart-popup-header">
                            <strong>Shopping Cart</strong>
                        </div>
                        <div class="cart-popup-body" id="cartPopupBody">
                            <div class="text-center text-muted py-3">
                                <i class="fas fa-spinner fa-spin"></i> Loading...
                            </div>
                        </div>
                        <div class="cart-popup-footer">
                            <a asp-area="Customer" asp-controller="Cart" asp-action="Index" class="btn btn-primary btn-sm w-100">
                                View Cart
                            </a>
                        </div>
                    </div>
                </div>
                <div class="dropdown" style="visibility: visible !important; opacity: 1 !important; display: inline-block !important;">
                    <button class="btn btn-link user-menu p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="display: flex !important; visibility: visible !important; opacity: 1 !important;">
                        <div class="user-info me-2">
                            <div class="user-name">@User.Identity.Name</div>
                            <div class="user-role">
                                @{
                                    var userRoles = ((System.Security.Claims.ClaimsIdentity)User.Identity).Claims
                                        .Where(c => c.Type == System.Security.Claims.ClaimTypes.Role)
                                        .Select(c => c.Value);
                                }
                                @string.Join(", ", userRoles)
                            </div>
                        </div>
                        <div class="user-avatar">
                            @User.Identity.Name?.Substring(0, 1).ToUpper()
                        </div>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow-lg" style="min-width: 200px;">
                        <li>
                            <div class="dropdown-item-text">
                                <div class="fw-bold">@User.Identity.Name</div>
                                <small class="text-muted">@string.Join(", ", userRoles)</small>
                            </div>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </a>
            }
        </div>
    </div>
</nav>
