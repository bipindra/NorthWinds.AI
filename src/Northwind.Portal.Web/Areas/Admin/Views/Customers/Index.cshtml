@model Northwind.Portal.Domain.DTOs.PagedResult<Northwind.Portal.Domain.DTOs.CustomerDto>
@{
    ViewData["Title"] = "Customers";
}

<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users me-2"></i>Customers</h5>
        <div>
            <span class="text-muted me-3">Total: @Model.TotalCount customers</span>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Filters -->
        <form method="get" class="row g-3 mb-4">
            <div class="col-md-4">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search by Company, Contact, or ID..." value="@ViewBag.SearchTerm" />
            </div>
            <div class="col-md-3">
                <select name="country" id="countryFilter" class="form-select">
                    <option value="">All Countries</option>
                    @foreach (var country in ViewBag.Countries as IEnumerable<string> ?? Enumerable.Empty<string>())
                    {
                        <option value="@country" selected="@(ViewBag.Country != null && ViewBag.Country.ToString() == country)">@country</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <select name="city" id="cityFilter" class="form-select">
                    <option value="">All Cities</option>
                    @foreach (var city in ViewBag.Cities as IEnumerable<string> ?? Enumerable.Empty<string>())
                    {
                        <option value="@city" selected="@(ViewBag.City != null && ViewBag.City.ToString() == city)">@city</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-1"></i>Filter
                </button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Customer ID</th>
                        <th>Company Name</th>
                        <th>Contact</th>
                        <th>Location</th>
                        <th>Orders</th>
                        <th>Total Spent</th>
                        <th>Last Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        @foreach (var customer in Model.Items)
                        {
                            <tr>
                                <td><strong>@customer.CustomerId</strong></td>
                                <td>@customer.CompanyName</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(customer.ContactName))
                                    {
                                        <div>@customer.ContactName</div>
                                        @if (!string.IsNullOrEmpty(customer.ContactTitle))
                                        {
                                            <small class="text-muted">@customer.ContactTitle</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(customer.City))
                                    {
                                        <div>@customer.City</div>
                                        @if (!string.IsNullOrEmpty(customer.Country))
                                        {
                                            <small class="text-muted">@customer.Country</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@customer.OrderCount</span>
                                </td>
                                <td>
                                    @if (customer.TotalSpent.HasValue)
                                    {
                                        <strong>@customer.TotalSpent.Value.ToString("C")</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (customer.LastOrderDate.HasValue)
                                    {
                                        <small>@customer.LastOrderDate.Value.ToString("MMM dd, yyyy")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-primary me-1">
                                        <i class="fas fa-eye me-1"></i>View
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-secondary">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="fas fa-users fa-2x mb-2 d-block"></i>
                                No customers found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Customer pagination">
                <ul class="pagination justify-content-center">
                    @{
                        var currentPage = Model.Page;
                        var totalPages = Model.TotalPages;
                        var showEllipsis = totalPages > 10;
                        var startPage = Math.Max(1, currentPage - 2);
                        var endPage = Math.Min(totalPages, currentPage + 2);
                    }
                    
                    @* Previous Button *@
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?page=@(currentPage - 1)&searchTerm=@ViewBag.SearchTerm&country=@ViewBag.Country&city=@ViewBag.City" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    
                    @* First Page *@
                    @if (showEllipsis && startPage > 1)
                    {
                        <li class="page-item @(1 == currentPage ? "active" : "")">
                            <a class="page-link" href="?page=1&searchTerm=@ViewBag.SearchTerm&country=@ViewBag.Country&city=@ViewBag.City">1</a>
                        </li>
                        @if (startPage > 2)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }
                    
                    @* Pages around current *@
                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i&searchTerm=@ViewBag.SearchTerm&country=@ViewBag.Country&city=@ViewBag.City">@i</a>
                        </li>
                    }
                    
                    @* Last Page *@
                    @if (showEllipsis && endPage < totalPages)
                    {
                        @if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                        <li class="page-item @(totalPages == currentPage ? "active" : "")">
                            <a class="page-link" href="?page=@totalPages&searchTerm=@ViewBag.SearchTerm&country=@ViewBag.Country&city=@ViewBag.City">@totalPages</a>
                        </li>
                    }
                    
                    @* Next Button *@
                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" href="?page=@(currentPage + 1)&searchTerm=@ViewBag.SearchTerm&country=@ViewBag.Country&city=@ViewBag.City" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Update cities when country changes
        document.getElementById('countryFilter')?.addEventListener('change', function() {
            const country = this.value;
            const cityFilter = document.getElementById('cityFilter');
            
            if (country) {
                fetch('@Url.Action("GetCities")?country=' + encodeURIComponent(country))
                    .then(response => response.json())
                    .then(cities => {
                        cityFilter.innerHTML = '<option value="">All Cities</option>';
                        cities.forEach(city => {
                            const option = document.createElement('option');
                            option.value = city;
                            option.textContent = city;
                            cityFilter.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Error loading cities:', error));
            } else {
                cityFilter.innerHTML = '<option value="">All Cities</option>';
            }
        });
    </script>
}
