@model Northwind.Portal.Domain.DTOs.ProductReportDto
@{
    ViewData["Title"] = "Product Report";
}

<div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-box me-2"></i>Product Report</h5>
        <a asp-action="Index" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h6>Total Products</h6>
                        <h3>@Model.TotalProducts</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h6>Active Products</h6>
                        <h3>@Model.ActiveProducts</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h6>Low Stock</h6>
                        <h3>@Model.LowStockProducts</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h6>Discontinued</h6>
                        <h3>@Model.DiscontinuedProducts</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Top Selling Products</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.TopSellingProducts.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Sold</th>
                                            <th>Revenue</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var product in Model.TopSellingProducts)
                                        {
                                            <tr>
                                                <td>@product.ProductName</td>
                                                <td>@product.QuantitySold</td>
                                                <td><strong>@product.Revenue.ToString("C")</strong></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center">No product sales data available</p>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Low Stock Products</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.LowStockProductsList.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Stock</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var product in Model.LowStockProductsList)
                                        {
                                            <tr>
                                                <td>@product.ProductName</td>
                                                <td><span class="badge bg-warning">@product.QuantitySold</span></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted text-center">No low stock products</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
